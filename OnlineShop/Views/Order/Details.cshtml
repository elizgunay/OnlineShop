@model OnlineShop.ViewModel.OrderDetailsModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <h2>Details information</h2>
            <hr />

            @if (TempData["message"] != null)
            {
                <div class="alert alert-success">
                    @TempData["message"]
                </div>
            }

        <dl class="row">

            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">@Model.Username</dd>


            <dt class="col-sm-3">Order State</dt>
            <dd class="col-sm-9">


                @using (Html.BeginForm("UpdateOrderState", "Order", FormMethod.Post))
                {
                    @Html.HiddenFor(i => i.OrderId)

                    <dl class="row">
                        <dt class="col-sm-8">
                            @Html.EnumDropDownListFor(i => i.OrderState, "Select Order State", new { @class = "form-control" })

                        </dt>
                        <dd class="col-sm-4">
                            <button type="submit" class="btn btn-primary">Update</button>

                        </dd>
                    </dl>

                }

            </dd>

            <dt class="col-sm-3">Order Id</dt>
            <dd class="col-sm-9">@Model.OrderId</dd>

            <dt class="col-sm-3">Order Number</dt>
            <dd class="col-sm-9">@Model.OrderNumber</dd>

            <dt class="col-sm-3">Total</dt>
            <dd class="col-sm-9">
                <i class="fa fa-usd" aria-hidden="true"></i>
                @Model.Total
            </dd>

            <dt class="col-sm-3">Order Date</dt>
            <dd class="col-sm-9">@Model.OrderDate</dd>



            <dt class="col-sm-3">Adres1</dt>
            <dd class="col-sm-9">
                @Model.Address
                <hr />
                @Model.Adres1
                <br />
                @Model.City - @Model.Semt - @Model.Mahale
                <br />
                @Model.Code
            </dd>

            <dt class="col-sm-3">Products</dt>
            <dd class="col-sm-9">
                <table class="table table-bordered">

                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderLines)
                        {
                            <tr>
                                <td>
                                    <img src="@Url.Content(item.Image)" width="70" />
                                </td>
                                <td>
                                    @item.ProductName
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    <i class="fa fa-usd" aria-hidden="true"></i>
                                    @item.Price
                                </td>
                                <td>
                                    <a href="/Home/Details/@item.ProductId" class="btn btn-primary" target="_blank">Product Details</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </dd>


        </dl>

        </div>

    </div>

</div>

